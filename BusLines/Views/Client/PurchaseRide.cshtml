@model Logic.ViewModels.Client.PurchaseViewModel
@{
    ViewData["Title"] = "PurchaseRide";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-5">
        <section id="loginForm">
            @using (Html.BeginForm("PurchaseRide", "Client", null, FormMethod.Post, null ,new { @class = "form-horizontal" }))
            {
                <h4>Proszę uzupełnić informacje o podróżujących pasażerach</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(m => m.FinalBusStopId)
            @Html.HiddenFor(m => m.InitialBusStopId)
            @Html.HiddenFor(m => m.RideId)

                <div class="form-group" id="container">
                    <!--Imię-->
                    @Html.LabelFor(m => m.Passenger.Name, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(m => m.Passenger.Name, new { @class = "form-control" })
                    </div>

                    <!--Nazwisko-->
                    @Html.LabelFor(m => m.Passenger.Surname, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(m => m.Passenger.Surname, new { @class = "form-control" })
                    </div>

                    <!--Adres email-->
                    @Html.LabelFor(m => m.Passenger.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(m => m.Passenger.Email, new { @class = "form-control" })
                    </div>

                        <br>
                        <hr>
                </div>
                
                <!--Kupienie biletu-->
                <div>
                    <button type="submit" class="btn btn-default">
                        Kup teraz
                    </button>
                </div>
            }
        </section>
    </div>
</div>

