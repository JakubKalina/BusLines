@model Logic.ViewModels.Admin.EditVehicleViewModel

@{
    ViewBag.Title = "Dodaj nowy pojazd";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-5">
        <section id="loginForm">
            @using (Html.BeginForm("EditVehicle", "Admin", new { ViewBag.ReturnUrl }, FormMethod.Post, null ,new { @class = "form-horizontal" }))
            {
                @Html.HiddenFor(c => c.Id)
                @Html.AntiForgeryToken()
                <h4>Edycja wybranego pojazdu</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(m => m.RegistrationNumber, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.RegistrationNumber, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.NumberOfSeats, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.NumberOfSeats, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.YearOfProduction, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.YearOfProduction, new { @class = "form-control" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="offset-md-2 col-md-10">
                        <input type="submit" value="Zapisz zmiany" class="btn btn-default" />
                    </div>
                </div>
                
            }
        </section>
    </div>
</div>
